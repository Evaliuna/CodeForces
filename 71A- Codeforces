#include <iostream>
using namespace std;

int main() {
   int n;
    cin>>n;
    string s[n];
    for(int i = 0; i<n;i++){
        cin>>s[i];
    }
    
    for(int i = 0; i<n;i++){
      if(s[i].length()>10){
            cout<<s[i].front()<<s[i].length() - 2<<s[i].back()<<"\n";
        }
        else cout<<s[i]<<"\n";
    }
    return 0;
}
